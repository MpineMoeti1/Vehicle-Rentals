<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.DashboardController">
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <!-- Use Label instead of Text for displaying text -->
            <Label text="Welcome to the Vehicle Rental System" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <GridPane hgap="10.0" vgap="10.0" alignment="CENTER">
                <Button fx:id="manageVehiclesButton" text="Manage Vehicles" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Button fx:id="manageCustomersButton" text="Manage Customers" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Button fx:id="handleBookingsButton" text="Handle Bookings" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Button fx:id="handlePaymentsButton" text="Handle Payments" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Button fx:id="viewReportsButton" text="View Reports" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            </GridPane>
        </VBox>
    </center>
</BorderPane>
